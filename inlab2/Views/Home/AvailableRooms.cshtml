
@{
    Layout = null;
}

@using inlab2.Models

@model List<rooms>

<!DOCTYPE html>

<html>
<head>


    <link rel="stylesheet" type="text/css" href="~/Content/emplList.css" />

    <style>
        body {
            background: url("http://www.elitis.fr/static/elitis/img/VIGNETTE_MENU_PP_2019.jpg");
            margin: 0px;
        }

        table {
            width: 100%;
        }

        table {
            margin-left: auto;
            margin-right: auto;
        }

        th {
            height: 50px;
        }



        table, th, td {
            border: 1px solid black;
        }

        table, th, td {
            border: 1px solid black;
        }

        th {
            background-color: darkseagreen;
            color: black;
        }

        th {
            display: table-cell;
            vertical-align: inherit;
            font-weight: bold;
            text-align: center;
        }


        td {
            background-color: white;
            color: black;
            text-align: center;
        }

        p.a {
            margin: 40px 0;
        }

        p.b {
            margin: 20px 0;
        }

        p.ex1 {
            margin-top: 40%;
        }

        td {
            height: 50px;
            vertical-align: bottom;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        div.a {
            text-align: center;
        }
    </style>


    <meta name="viewport" content="width=device-width" />
    <title>The list of available rooms are:</title>

</head>
<body>
    <div>

        <div class="a">
            <h1>List Of available Rooms</h1>


            <table align="center">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Floor No</th>
                        <th>Hotel No</th>
                    </tr>
                </thead>

                @foreach (rooms Rooms in Model)
                {
                    <tr>
                        <td>@Rooms.roomId</td>
                        <td>@Rooms.floorId</td>
                        <td>@Rooms.hotelId</td>

                    </tr>
                }

            </table>

        </div>
</body>
</html>
