    <script>
        function checkForEmptyFields() {
            alert("a");
            var Hotel = document.getElementById("HotelIDField").value;
            var Floor = document.getElementById("FloorIDField").value;
            if (Hotel == null || Floor == "") {
                document.getElementById("status").innerText = "Please fill in the missing fields.";
                return false;
            }
            return true;
        }

        function validation1()
        {
            var HotelID = document.getElementById("HotelIDField").value;
            var FloorID = document.getElementById("FloorIDField").value;
            if (HotelID == null || FloorID == "") {
                alert( "Please fill in the missing fields.");
                return false;
            }
            if (HotelID < '1' || HotelID > '3') {

                document.getElementById("status").innerText = "Please enter correct hotelID ie: between 1-3.";
                return false;

            }
            if (FloorID < '1' || FloorID > '3') {

                document.getElementById("status").innerText = "Please enter correct FloorlID ie: between 1-3.";
                return false;

            }
            return true;
        }

    </script>
    <meta name="viewport" content="width=device-width" />
